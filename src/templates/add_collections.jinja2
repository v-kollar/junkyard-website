{% extends 'main.jinja2' %}
{% block title %}<title>Zadání sběru</title>{% endblock %}
{% block content %}

<h1 style="margin-left:40px;margin-top: 20px;margin-bottom: 20px;">
Zadání sběru
</h1>

<form class="collection__modification"
      name="collection__modification" method="POST">
<div class="wrapper">
  <div>
  {% for i in materials %}
  <label for="materials">{{i[1]}}</label>
  {%endfor%}
	</div>		
	<div>
    <label for="phone">Telefon sběrače</label>
    <input id="phone" type="tel" placeholder="123456789" name="phone" required>
  </div>
  <div class="closer">

    <label for="weight">Hmotnost</label>
      {% for i in materials %}
      <input id="weight" type="text" name="{{i[0]}}">
      {%endfor%}
  </div>

	<div class="closer">
    <label for="origin">Původ</label>
    {% for i in materials %}
    <input id="weight" type="text" name="{{i[0]}}">
    {%endfor%}
	</div>
  <input type="submit" class="btn" value="Zadat sběr">

</div>
</form>


{% endblock %}
