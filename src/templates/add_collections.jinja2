{% extends 'main.jinja2' %}
{% block title %}<title>Zadání sběru | Sběrné suroviny</title>{% endblock %}
{% block content %}
{% with messages = get_flashed_messages(with_categories=false) %}
{% if messages %}
    {% for message in messages %}
    <section><h2 class="flash_message">{{ message }}</h2></section>
    {% endfor %}
{% endif %}    
{% endwith %}

<h1 class="headline">
Zadání sběru
</h1>

<form class="collection__modification"
      name="collection__modification" method="POST">
<div class="wrapper">
  <div>
  {% for i in materials %}
  <label for="materials">{{i[1]}}</label>
  {%endfor%}
	</div>		
	<div>
    <label for="phone">Telefon sběrače</label>
    <input id="phone" type="tel" placeholder="123456789" name="phone" required>
  </div>
  <div class="closer">

    <label for="weight">Hmotnost</label>
      {% for i in materials %}
      <input id="weight" type="text" name="{{i[0]}}">
      {%endfor%}
  </div>

	<div class="closer">
    <label for="origin">Původ</label>
    {% for i in materials %}
    <input id="weight" type="text" name="{{i[0]}}">
    {%endfor%}
	</div>
  <input type="submit" class="btn" value="Zadat sběr">

</div>
</form>


{% endblock %}
