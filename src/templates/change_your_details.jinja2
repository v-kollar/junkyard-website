{% extends 'main.jinja2' %}
{% block title %}<title>Registrace</title>{% endblock %}
{% block content %}
<div class="reg_container">
    
    <form method="POST">
        <h1>Změna údajů</h1>
        
        <div class="form-group">
            <label for="">Jméno</label>
            <input type="text" name="first_name" value={{session['user'][0][2]}} class="form-control" required maxlength="32">
        </div>

        <div class="form-group">
            <label for="">Příjmení</label>
            <input type="text" name="last_name" value={{session['user'][0][3]}} class="form-control" required maxlength="32">
        </div>
    
        <div class="form-group">
            <label for="">Adresa trvalého bydliště</label>
            <input type="text" name="permanent_stay" value="{{session['user'][0][6]}}" class="form-control" required maxlength="50">
        </div>

        <div class="form-group">
            <label for="">Adresa dočasného bydliště</label>
            <input type="text" name="temp_stay" value={{session['user'][0][7]}} class="form-control" maxlength="50">
        </div>

        <div class="form-group">
            <label for="">E-mail</label>
            <input type="email" name ="email" value={{session['user'][0][4]}} class="form-control" required maxlength="50">
        </div>

        <div class="form-group">
            <label for="">Telefon</label>
            <input type="tel" name="phone" pattern="[0-9]{9}" value={{session['user'][0][5]}} class="form-control" required maxlength="9">
        </div>

        <div class="form-group">
            <label for="">Heslo</label>
            <input type="password" name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Heslo musí obsahovat alespoň 8 znaků, 1 číslo a 1 velké písmeno" class="form-control" required maxlength="32">
        </div>

        <div class="form-group">
            <label for="">Bankovní spojení</label>
            <input type="text" name="bank_id" value={{session['user'][0][8]}} class="form-control" required maxlength="32">
        </div>

        <input type="submit" class="btn" value="Aktualizovat">
    </form>
</div>
{% endblock %}