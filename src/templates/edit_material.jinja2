{% extends 'main.jinja2' %}
{% block title %}<title>Úprava materiálu | Sběrné suroviny</title>{% endblock %}
{% block content %}


<div class="container">
    <form method="POST">
        <h1>{{material}}</h1>
        <div class="form-group">
            <label for="">Cena</label>
            <input name="price" type="text" class="form-control" required>
        </div>
        <label>Platnost do</label>
        <input type="date" id="date-until" name="date-until" required>
        <input type="submit" class="btn" value="Potvrdit">
    </form>
</div>

{% endblock %}